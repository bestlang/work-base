{
  "name": "bestlang/laracms",
  "description": "a cms package for laravel",
  "type": "library",
  "license": "Apache-2.0",
  "minimum-stability":"dev",
  "authors": [
    {
      "name": "bestlang",
      "email": "295322133@qq.com"
    }
  ],
  "homepage": "https://github.com/bestlang/laracms",
  "keywords": ["Laravel", "laraCms"],
  "require": {
    "illuminate/support": "~5|~6",
    "baum/baum": "v2.x-dev",
    "bestlang/base": "dev-master",
    "bestlang/laravel-ueditor": "dev-master",
    "bestlang/wxpay": "dev-master",
    "bestlang/alipay-easysdk": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "mockery/mockery": "^1.1",
    "orchestra/testbench": "~3|~4",
    "sempro/phpunit-pretty-print": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "BestLang\\LaraCms\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ],
    "classmap": [
      "database/seeds",
      "database/factories"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "BestLang\\LaraCms\\Providers\\AppServiceProvider",
        "BestLang\\LaraCms\\Providers\\RouteServiceProvider"
      ],
      "aliases": {
        "laracms": "BestLang\\LaraCms\\Facades\\LaraCms"
      }
    }
  }
}