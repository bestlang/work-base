{
  "name": "bestlang/base",
  "description": "the base package for other packages under bestlang. including permission and auth related code",
  "license": "MIT",
  "authors": [
    {
      "name": "bestlang",
      "email": "295322133@qq.com"
    }
  ],
  "homepage": "https://github.com/bestlang/base",
  "keywords": ["Laravel", "bestlang", "base"],
  "require": {
    "illuminate/support": "~5|~6",
    "baum/baum": "v2.x-dev",
    "spatie/laravel-permission": "^3.18",
    "tymon/jwt-auth": "1.0.*",
    "upyun/sdk": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "mockery/mockery": "^1.1",
    "orchestra/testbench": "~3|~4",
    "sempro/phpunit-pretty-print": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "BestLang\\Base\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ],
    "classmap": [
      "database/seeds",
      "database/factories"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "BestLang\\Base\\Providers\\AppServiceProvider",
        "BestLang\\Base\\Providers\\ResponseServiceProvider",
        "BestLang\\Base\\Providers\\RouteServiceProvider",
        "BestLang\\Base\\Providers\\EventServiceProvider"
      ],
      "aliases": {
        "HashConfig": "BestLang\\Base\\Facades\\HashConfig"
      }
    }
  }
}